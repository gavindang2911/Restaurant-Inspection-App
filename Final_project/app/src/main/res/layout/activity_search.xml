<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.SearchActivity">

    <ImageView
        android:id="@+id/imageViewSearchIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@android:drawable/ic_menu_search" />

    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/imageViewSearchIcon"
        android:ems="14"
        android:inputType="textPersonName"
         />



    <TextView
        android:id="@+id/textViewHazardLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        android:text="@string/hazard_level"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonGreen"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/green_outline_button"
        android:layout_marginTop="130dp"
        android:layout_marginStart="40dp"
         />

    <Button
        android:id="@+id/buttonOrange"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@id/buttonGreen"
        android:background="@drawable/orange_outline_button"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/buttonRed"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@id/buttonGreen"
        android:background="@drawable/red_outline_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
         />

    <TextView
        android:id="@+id/textViewLow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="180dp"
        android:text="@string/low"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewModerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textViewLow"
        android:layout_centerHorizontal="true"
        android:text="@string/moderate"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewHigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonGreen"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:text="@string/high"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewCriticalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="220dp"
        android:text="@string/critical_violation"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewLager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="255dp"
        android:text="@string/larger_than"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewSmaller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="290dp"
        android:text="@string/less_than"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextTextLager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textViewLager"
        android:layout_centerHorizontal="true"
        android:ems="12"
        android:inputType="number"
        android:hint="@string/input_critical_violation"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextTextLess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textViewSmaller"
        android:layout_centerHorizontal="true"
        android:ems="12"
        android:inputType="number"
        android:hint="@string/input_critical_violation"
        android:textSize="14sp" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:text="@string/reset_button"
        android:background="@drawable/button_view"/>

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:text="@string/search_button"
        android:background="@drawable/button_view"/>

    <TextView
        android:id="@+id/textViewFavourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="330dp"
        android:text="@string/favourite_text"
        android:textSize="18sp" />


    <ImageButton
        android:id="@+id/imageButtonFav"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:background="@drawable/favourite_outline_button"
        app:srcCompat="@drawable/star_unclick" />


</RelativeLayout>